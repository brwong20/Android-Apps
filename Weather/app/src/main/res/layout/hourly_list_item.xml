<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                tools:background = "@drawable/background_gradient">

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/hourly_time_label"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="24sp"
        android:textColor="#ffffffff"
        tools:text="12PM"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon_image_view"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/hourly_time_label"
        android:layout_toEndOf="@+id/hourly_time_label"
        android:src="@mipmap/rain"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/temp_label"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffffff"
        android:textSize="24sp"
        tools:text= "100"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/summary_label"
        android:layout_centerVertical="true"
        android:textColor="#ffffffff"
        android:layout_toLeftOf="@+id/temp_label"
        android:layout_toRightOf="@+id/icon_image_view"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        tools:text = "Partly cloudy"/>
</RelativeLayout>