<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Snapshat" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_snapshat</item>
        <item name="popupMenuStyle">@style/PopupMenu.Snapshat</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Snapshat</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Snapshat</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Snapshat</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Snapshat</item>
        <item name="actionModeBackground">@drawable/cab_background_top_snapshat</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_snapshat</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Snapshat</item>
        <item name="android:editTextBackground">@drawable/apptheme_edit_text_holo_light</item>
        <item name="android:actionOverflowButtonStyle">@style/Theme.Snapshat.Overflow</item>
        <item name="android:listViewStyle">@style/Theme.Snapshat.LightPurpleBackground</item>
        <item name="android:gridViewStyle">@style/Theme.Snapshat.LightPurpleBackground.GridView</item>
    </style>

    <style name="Theme.Snapshat.LightPurpleBackground">
        <item name="android:background">@color/light_purple_background</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="Theme.Snapshat.LightPurpleBackground.GridView">
        <item name="android:padding">@dimen/user_grid_spacing</item>
        <item name="android:background">@color/light_purple_background</item>
    </style>

    <style name="Theme.Snapshat.Overflow" parent="@android:style/Widget.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_overflow</item>
    </style>

    <style name="ActionBar.Solid.Snapshat" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:background" tools:ignore="NewApi">@drawable/ab_solid_snapshat</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_snapshat</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_snapshat</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Snapshat</item>
        <item name="background">@drawable/ab_solid_snapshat</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_snapshat</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_snapshat</item>
        <item name="progressBarStyle">@style/ProgressBar.Snapshat</item>
        <item name="android:titleTextStyle">@style/ActionBar.Solid.Snapshat.TitleTextStyle</item>
    </style>

    <style name="ActionBar.Solid.Snapshat.TitleTextStyle"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/apptheme_color</item>
    </style>


    <style name="ActionBar.Transparent.Snapshat" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/ab_transparent_snapshat</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Snapshat</item>
    </style>

    <style name="PopupMenu.Snapshat" parent="@style/Widget.AppCompat.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_snapshat</item>
    </style>

    <style name="DropDownListView.Snapshat" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_snapshat</item>
    </style>

    <style name="ActionBarTabStyle.Snapshat" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_snapshat</item>
        <item name="background">@drawable/tab_indicator_ab_snapshat</item>
    </style>

    <style name="DropDownNav.Snapshat" parent="@style/Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_snapshat</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_snapshat</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_snapshat</item>
        <item name="background">@drawable/spinner_background_ab_snapshat</item>
    </style>

    <style name="ProgressBar.Snapshat" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_snapshat</item>
    </style>

    <style name="ActionButton.CloseMode.Snapshat" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_snapshat</item>
        <item name="background">@drawable/btn_cab_done_snapshat</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Snapshat.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Snapshat</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Snapshat</item>
    </style>




    <style name="PurpleBackgroundFill">
        <item name="android:background">@drawable/background_fill</item>
    </style>


    <style name="PurpleBackground">
        <item name="android:src">@drawable/background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="AppTitle">
        <item name="android:text">@string/app_name</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignTop">@+id/background_image</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LinearLayoutBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_below">@id/title_textView</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_marginTop">@dimen/login_vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingLeft">@dimen/login_vertical_margin</item>
        <item name="android:paddingRight">@dimen/login_vertical_margin</item>
        <item name="android:paddingTop">@dimen/login_horizontal_padding</item>
        <item name="android:paddingBottom">@dimen/login_horizontal_padding</item>
    </style>

    <style name="ButtonFormatStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">@drawable/button_custom</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@color/login_signin_color</item>
    </style>

    <style name="InputEditText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="GridImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:adjustViewBounds">true</item>
    </style>
</resources>
